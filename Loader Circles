  .loader { 

  

    position: absolute; 

      left: 150px; top: 100px; 

  

    border: 16px solid #f3f3f3; 

  

    border-radius: 50%; 

  

    border-top: 16px solid #3498db; 

  

    width: 120px; 

  

    height: 120px; 

     

  

    -webkit-animation: spin .25s linear infinite; /* Safari */ 

  

    animation: spin .25s linear infinite; 

  

} 

  

  

  

  

  

.loader2 { 

  

    position: absolute; 

  

    left: 100px;  

   

      top: 60px; 

  

